@model AlMohamyProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  عرض العروض</h4>


    <div class="card" >

        <div class="data_table">
            <table id="example" class="table table-striped table-bordered table-responsive">
                <thead class="table-dark">
                    <tr>
                        <th>اسم الخدمة</th>
                        <th>اسم المستخدم</th>
                        <th>اسم المحامي</th>
                        <th>صورة المحامي</th>
                       
                        <th>وصف مختصر  للمحامي   </th>
                        <th>عدد سنوات الخبرة  للمحامي   </th>
                        <th>تاريخ بداية العرض </th>
                        <th> يوم انتهاء العرض        </th>

                        <th>حالة العرض</th>



                     
                       


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstOffers)
                    {

                        <tr>
                            <td>@item.Notes</td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.LawyerName
                            </td>

                            <td style="width:10%">
                                <div class="avatar avatar-xl">
                                    <img class="rounded-circle" src="@string.Format("/Uploads/{0}",item.LawyerImage)" alt="Img placeholder">
                                </div>

                               





                            </td>
                           

                           
                            <td>
                                @item.LawyerShortDescription
                            </td>
                            <td>
                                @item.LawyersExperinceYears
                            </td>
                            <td>
                                @item.CreatedDate
                            </td>
                            <td>
                                @item.OfferEndDate
                            </td>
                            <td>
                                @item.OfferStatus
                            </td>
                        </tr>

                    }



                </tbody>
            </table>
        </div>


    </div>

</div>