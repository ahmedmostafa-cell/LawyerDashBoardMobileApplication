@model AlMohamyProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span> عن التطبيق</h4>
    <a asp-area="Admin" asp-controller="AboutApp" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف عن التطبيق</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>عنوان عن التطبيق   </th>
                        <th>وصف عن لبتطبيق   </th>
                        <th>موجهة لمن  </th>
                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                   

                        @foreach (var item in Model.lstAboutApp)
                        {
                        <tr>
                            <td>@item.AboutAppTitle</td>

                            <td>@item.AboutAppDescription</td>


                            <td>@item.AboutAppForWhom</td>

                            <td>
                                <a asp-area="Admin" asp-controller="AboutApp" asp-action="Form" asp-route-id="@item.AboutAppId" class="btn btn-info text-white" style="cursor:pointer">
                                    تعديل
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="AboutApp" asp-action="Delete" asp-route-id="@item.AboutAppId" class="btn btn-danger text-white" style="cursor:pointer">
                                    حذف
                                </a>
                            </td>
                        </tr>
                        }

                   
                


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>


<script src="~/js/tableData.js"></script>