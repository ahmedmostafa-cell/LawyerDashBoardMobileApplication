@model AlMohamyProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span> اضف الاشعارات</h4>
    <a asp-area="Admin" asp-controller="Notification" asp-action="Form"><button type="button" class="btn btn-primary">اضف الاشعارات</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>اسم المرسل</th>
                        <th>اسم المرسل اليه</th>
                        <th>نص الاشعار</th>
                        <th>التاريخ</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstNotifications)
                    {

                        <tr>
                            <td>@item.SenderName</td>
                            <td>
                                @item.ToWhomName
                            </td>
                            <td>
                                @item.Text
                            </td>
                            <td>
                                @item.CreatedDate
                            </td>


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>