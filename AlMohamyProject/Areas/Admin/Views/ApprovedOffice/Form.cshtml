@model Domains.TbApprovedOffice
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  اضافة المكاتب المعتمدة
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر المكاتب المعتمدة</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="ApprovedOffice" asp-action="Save" class="card-body">
                 
                  
                  <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">اسم صاحب الطلب</label>
                            <input asp-for="CreatedBy" type="hidden" class="form-control" id="basic-default-company" placeholder="اسم صاحب الطلب" />
                            <input asp-for="ApprovedOfficeLogo" type="hidden" class="form-control" id="basic-default-company" placeholder="اسم صاحب الطلب" />
                            <input asp-for="ApprovalStatus" type="hidden" class="form-control" id="basic-default-company" placeholder="اسم صاحب الطلب" />
                            <input asp-for="ApprovedOfficeLicenseDoc" type="hidden" class="form-control" id="basic-default-company" placeholder="اسم صاحب الطلب" />
                            <input asp-for="UserFirsName" type="text" class="form-control" id="basic-default-company" placeholder="اسم صاحب الطلب" />
                            <span asp-validation-for="UserFirsName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">رقم صاحب الطلب</label>
                            <input asp-for="UserPhoneNumber" type="text" class="form-control" id="basic-default-company" placeholder="رقم صاحب الطلب" />
                            <span asp-validation-for="UserPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">ايميل صاحب الطلب</label>
                            <input asp-for="UserEmail" type="text" class="form-control" id="basic-default-company" placeholder="ايميل صاحب الطلب" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>
                       <div class="col-md-12">
                       <input type="hidden" asp-for="ApprovedOfficeId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">اسم المكتب المعتمد</label>
                            <input asp-for="ApprovedOfficeName" type="text" class="form-control" id="basic-default-fullname" placeholder="اسم المكتب المعتمد" />
                            <span asp-validation-for="ApprovedOfficeName" class="text-danger"></span>
                    </div>
                       <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">اسم المنطقة</label>
                            <input asp-for="AreaName" type="text" class="form-control" id="basic-default-company" placeholder="اسم المنطقة" />
                            <span asp-validation-for="AreaName" class="text-danger"></span>
                    </div>
                       <div class="col-md-12">
                        <label class="form-label" for="basic-default-company">اسم المدينة</label>
                        <input asp-for="CityName" type="text" class="form-control" id="basic-default-company" placeholder="اسم المدينة" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>


                   
                    <div class="col-md-12">
                        <label class="form-label" for="basic-default-company">وصف مختصر للمكتب</label>
                        <input asp-for="ApprovedOfficeShortDescription" type="text" class="form-control" id="basic-default-company" placeholder="وصف مختصر للمكتب" />
                        <span asp-validation-for="ApprovedOfficeShortDescription" class="text-danger"></span>
                    </div>

                      <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">لوجو المكتب</label>
                                <input type="file" class="form-control"   name="files" id="selectedFile">
                               
                                <span class="text-danger" id="error"></span>
                          
                    </div>


                       @* <div class="col-md-12">
                            <label class="form-label" for="multicol-country">مفعل ام لا</label>
                            <select asp-for="ApprovalStatus" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر الحالة</option>
                                <option value="مفعل">مفعل</option>
                                <option value="غير مفعل">غير مفعل</option>
                            </select>
                            <span asp-validation-for="ApprovalStatus" class="text-danger"></span>
                        </div>*@

                    

                      <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">ملف الرخصة</label>
                                <input type="file" class="form-control"   name="filess" id="selectedFiles">
                               
                                <span class="text-danger" id="error1"></span>
                          
                     </div>
               
          
                   
                
                      <div class="pt-4">
                    <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                  
                  </div>
                </div>
                 
                </form>
            </div>
        </div>
      
    </div>


 </div>
 @section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     
    }
    <script>
        //alert("ahmed");
        const logo = document.getElementById('selectedFile');
        const license = document.getElementById('selectedFiles');
        const form = document.getElementById('form')
        const erroElement = document.getElementById('error')
        const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

            }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
            }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

            }


        });
    </script>

 }