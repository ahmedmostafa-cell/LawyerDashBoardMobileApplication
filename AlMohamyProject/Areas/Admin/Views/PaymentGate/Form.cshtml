@model Domains.TbPaymentGates
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  اضافة بوابات الدفع
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر بوابات الدفع </h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="PaymentGate" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="PaymentGatesId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">اسم بوابة الدفع </label>
                            <input asp-for="PaymentGateTitle" type="text" class="form-control" id="basic-default-fullname" placeholder="اسم بوابة الدفع" />
                            <span asp-validation-for="PaymentGateTitle" class="text-danger"></span>
                        </div>
                      
                       

                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">لوجو بوابة الدفع </label>
                            <input required type="file" class="form-control"  name="files" id="selectedFile">

                            <span class="text-danger" id="error"></span>

                        </div>


                          <div class="col-md-12">
                          
                            <label class="form-label" for="basic-default-fullname">عمولة بوابة الدفع </label>
                            <input asp-for="CreatedBy" type="number" class="form-control" id="basic-default-fullname" placeholder="اسم بوابة الدفع" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>



                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">حالة التفعيل</label>
                            <select asp-for="ActivationStatus" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر حالة التفعيل </option>
                                <option value="مفعل" data-select2-id="29">مفعل</option>
                                <option value="غير مفعل" data-select2-id="30">غير مفعل</option>
                            </select>
                            <span asp-validation-for="ActivationStatus" class="text-danger"></span>
                        </div>




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        //alert("ahmed");
        const logo = document.getElementById('selectedFile');
        const license = document.getElementById('selectedFiles');
        const form = document.getElementById('form')
        const erroElement = document.getElementById('error')
        const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

            }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
            }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

            }


        });
    </script>

 }