@model AlMohamyProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  تقييمات المحاميين المجملة</h4>
   @* <a asp-area="Admin" asp-controller="Evaluation" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف المكاتب المعتمدة</button></a>*@
    <!-- DataTable with Buttons -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span> متوسط تقييم المحامي </span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 id="LawyerTotalEvaluation" class="mb-0 me-2"></h4>
                                @*   <small class="text-success">(+29%)</small>*@
                            </div>

                        </div>
                        <span class="badge bg-label-primary rounded p-2">
                            <i class="bx bx-user bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
       

    </div>
  


    <div class="col-md-6">
        <label class="form-label" for="multicol-country">اسم المحامي   </label>
        <select asp-items="@(new SelectList(ViewBag.lawyers , "Id" , "FirstName"))" onchange="myFunctionn()" id="lawyer" class="select2 form-select" data-allow-clear="true">
            <option value="">اختر  اسم المحامي </option>

        </select>

    </div>

    <br />
    <br />
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>اسم الذي يقوم بعملية التقييم</th>
                        <th>صورة الذي يقوم بعملية التقييم</th>
                        <th>اسم الذي يتم تقييمه  </th>
                        <th>صورة الذي يتم تقييمه  </th>
                        <th>نص التقييم </th>
                        <th>عدد النجوم </th>
                        <th>اسم الخدمة المقيمة</th>
                      

                    </tr>
                </thead>
                <tbody>
                    


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>

<script src="~/js/evaluationLawyerTotal.js"></script>

    